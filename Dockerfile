FROM python:3.10-slim

# 필수 패키지 설치
RUN apt-get update && apt-get install -y \
    build-essential \
    fonts-nanum \
    && rm -rf /var/lib/apt/lists/*

# 워크디렉토리 설정
WORKDIR /app

# 코드 복사
COPY . .

# 의존성 설치
RUN pip install --upgrade pip
RUN pip install -r requirements.txt

# 폰트 경로 환경변수 설정
ENV MPLCONFIGDIR=/app/mplconfig

# 실행 커맨드 (테스트용 기본값: dummy 인자 넣음)
CMD ["python", "main.py", "--num_teams", "3", "--repeat", "500", "--data_path", "players.json"]
